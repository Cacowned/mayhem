<Window x:Class="DefaultModules.Wpf.KeypressConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemDefaultStyles.UserControls;assembly=MayhemDefaultStyles"
            Width="400"
        Height="400" WindowStyle="None" ResizeMode="NoResize" BorderThickness="2" Closing="Window_Closing"
             >

    <Grid>
        <StackPanel Style="{StaticResource BackgroundGradient}">
            <src:WindowHeader Text="Config: KeyPress" />
            <src:Borders>
            <StackPanel>
                <TextBlock TextWrapping="WrapWithOverflow">Please enter a combination of keys which will activate this action.</TextBlock>
                <TextBlock TextWrapping="WrapWithOverflow" Margin="0 50 0 20" MinHeight="50" Text="{Binding KeysDown, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" FontSize="14" TextAlignment="Center" FontWeight="Bold" />
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Click="Button_Save_Click">Save</Button>
                    <Button Click="Button_Reset_Click">Reset</Button>
                    <Button Click="Button_Cancel_Click">Cancel</Button>
                </StackPanel>
            </StackPanel>
            </src:Borders>

        </StackPanel>
    </Grid>
</Window>
