<Window x:Class="MayhemWpf.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:MayhemDefaultStyles.UserControls;assembly=MayhemDefaultStyles"
        Title="ConfigWindow" Height="300" Width="300" Loaded="Window_Loaded"
        WindowStyle="None" ResizeMode="NoResize" BorderThickness="2" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" >
    <Grid>
        <StackPanel Style="{StaticResource BackgroundGradient}">
            <src:WindowHeader x:Name="windowHeader" />
            <src:Borders Margin="0,10,0,20">
                <StackPanel>
                    <ContentPresenter Name="ConfigContent">
                    </ContentPresenter>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Name="buttonCanSave" Click="Button_Save_Click" Height="30" Width="50">Save</Button>
                        <Button Click="Button_Cancel_Click" Height="30" Width="50">Cancel</Button>
                    </StackPanel>
                </StackPanel>
            </src:Borders>
        </StackPanel>
    </Grid>
</Window>
