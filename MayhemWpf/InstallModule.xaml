<Window x:Class="MayhemWpf.InstallModule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:MayhemWpf.UserControls"
		xmlns:common="clr-namespace:MayhemDefaultStyles.UserControls;assembly=MayhemDefaultStyles"
        Title="InstallModule" Width="400" Height="250">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>
    <StackPanel Style="{StaticResource BackgroundGradient}">
        <src:MayhemHeader />
        <common:Borders>
            <StackPanel>
                <TextBlock>Install <Run Name="ModuleName" />?</TextBlock>
                <ProgressBar Height="10" Name="Progress" Margin="10" Minimum="0" Maximum="100" />
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20 0 20 20">
                    <Button Name="Install" Click="Install_Click">Install</Button>
                    <Button Name="Cancel" Click="Cancel_Click">Cancel</Button>
                </StackPanel>
            </StackPanel>
        </common:Borders>
    </StackPanel>
</Window>
