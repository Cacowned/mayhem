<Window x:Class="MayhemWpf.InstallModule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InstallModule" Height="120" Width="300">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock>Install <Run Name="ModuleName" />?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Name="Install" Click="Install_Click">Install</Button>
            <Button Name="Cancel" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
