<Window x:Class="MayhemWpf.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:src="clr-namespace:MayhemWpf"
		Title="MainWindow" Height="350" Width="600" ResizeMode="CanMinimize">
	<Window.Resources>
		<Style x:Key="ModuleNameStyle">
			<Setter Property="Control.FontSize" Value="14.667" />
			<Setter Property="Control.FontWeight" Value="Bold" />
		</Style>
		<Style x:Key="ActionConfigureButtonStyle">
			<Setter Property="Control.Margin" Value="0,0,10,0" />
			<Style.Triggers>
				<DataTrigger Binding="{Binding Path=Action.HasConfig}" Value="true">
					<Setter Property="Control.Foreground" Value="Black" />
				</DataTrigger>
				<DataTrigger Binding="{Binding Path=Action.HasConfig}" Value="false">
					<Setter Property="Control.Foreground" Value="Gray" />
				</DataTrigger>
			</Style.Triggers>
		</Style>
		<Style x:Key="ReactionConfigureButtonStyle">
			<Setter Property="Control.Margin" Value="0,0,10,0" />
			<Style.Triggers>
				<DataTrigger Binding="{Binding Path=Reaction.HasConfig}" Value="true">
					<Setter Property="Control.Foreground" Value="Black" />
				</DataTrigger>
				<DataTrigger Binding="{Binding Path=Reaction.HasConfig}" Value="false">
					<Setter Property="Control.Foreground" Value="Gray" />
				</DataTrigger>
			</Style.Triggers>
		</Style>
		<Style x:Key="ConfigurationStringStyle">
			<Setter Property="Control.FontStyle" Value="Italic" />
		</Style>
		<Style TargetType="{x:Type Button}" x:Key="ActionButton">
			<Setter Property="Background">
				<Setter.Value>
					<ImageBrush ImageSource="redbutton.png"/>
				</Setter.Value>
			</Setter>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate>
						<Grid>
							<Rectangle Fill="{TemplateBinding Property=Background}" />
							<ContentPresenter />
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>
	<StackPanel>
		<Grid>
			<Grid.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FF38FFFC" Offset="1"/>
				</LinearGradientBrush>
			</Grid.Background>
			<Grid.RowDefinitions>
				<RowDefinition MinHeight="50" />
				<RowDefinition MinHeight="30" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition MaxWidth="80" />
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="21.333" FontWeight="Bold">
				<TextBlock.Effect>
					<DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0"/>
				</TextBlock.Effect>Mayhem</TextBlock>
			<Button Grid.Column="0" Grid.Row="1" Style="{StaticResource ActionButton}" Width="176" HorizontalAlignment="Center" BorderThickness="0">
				<TextBlock>Choose an Action</TextBlock>
			</Button>
			<Button Grid.Column="1" Grid.Row="1">Choose a Reaction</Button>
			<Button Grid.Column="2" Grid.Row="1">Build</Button>
		</Grid>
		<Border Margin="10" BorderThickness="3" CornerRadius="10" BorderBrush="#FF266368" Padding="5" Background="White">
			<ItemsControl x:Name="RunList">
				
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border BorderThickness="0,0,0,1" BorderBrush="#FFD4D4D4">
							<StackPanel Orientation="Horizontal">
								<StackPanel Width="237" Orientation="Vertical">
									<TextBlock Style="{StaticResource ModuleNameStyle}" Text="{Binding Action.Name}" />
									<StackPanel Orientation="Horizontal">
										<TextBlock Style="{StaticResource ActionConfigureButtonStyle}">Configure</TextBlock>
										<TextBlock Style="{StaticResource ConfigurationStringStyle}" Text="{Binding Action.ConfigString}" />
									</StackPanel>
								</StackPanel>
								<StackPanel Width="238" Orientation="Vertical">
									<TextBlock Style="{StaticResource ModuleNameStyle}" Text="{Binding Reaction.Name}" />
									<StackPanel Orientation="Horizontal">
										<TextBlock Style="{StaticResource ReactionConfigureButtonStyle}">Configure</TextBlock>
                                        <TextBlock Style="{StaticResource ConfigurationStringStyle}" Text="{Binding Reaction.ConfigString}" />
                                    </StackPanel>
								</StackPanel>

								<StackPanel Orientation="Horizontal">
									<Button>Delete</Button>
									<Button>On/Off</Button>
								</StackPanel>
							</StackPanel>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
				
			</ItemsControl>
		</Border>
	</StackPanel>
</Window>
