<src:WpfConfiguration x:Class="SystemModules.Wpf.ShutDownWarning"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"

             Width="400">

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="400" />

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!--<TextBlock Style="{StaticResource ConfigLabel}" Grid.Row="0" Name="WarningBox">Message:</TextBlock>-->
        <TextBlock Grid.Row="0" Name="WarningBox" Grid.RowSpan="2" TextWrapping="WrapWithOverflow" TextAlignment="Center">Message:</TextBlock>
        <CheckBox Name="EnableForceCheckBox" Visibility="Visible" Grid.Row="2" HorizontalAlignment="Center">Force Shutdown?</CheckBox>
    </Grid>

</src:WpfConfiguration>