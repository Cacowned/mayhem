<src:WpfConfiguration x:Class="GoogleModules.Wpf.GooglePlusAddMomentConfig"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
                      Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Name="DetailsText" TextAlignment="Center" TextWrapping="WrapWithOverflow" Grid.Row="0" Grid.ColumnSpan="3">Please enter the text of the moment of the user you want to add.</TextBlock>
        <TextBlock Name="TypeText" Style="{StaticResource ConfigLabel}" Grid.Column="0" Grid.Row="1">Moment text:</TextBlock>
        <TextBox Name="ActivityTextBox" TextChanged="ActivityTextBox_TextChanged" Grid.Column="1" Grid.Row="1"/>
        <TextBlock Style="{StaticResource ConfigErrorMessage}" Name="textInvalid" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">The moment is invalid.</TextBlock>
    </Grid>
</src:WpfConfiguration>
