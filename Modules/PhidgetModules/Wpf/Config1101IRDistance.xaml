<common:PhidgetConfigControl  x:Class="PhidgetModules.Wpf.Config1101IRDistance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             xmlns:common="clr-namespace:PhidgetModules.Wpf.UserControls"
             Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource ConfigLabel}" Grid.Column="0" Grid.Row="0">Top Value:</TextBlock>
        <TextBox Name="textBoxTopValue" Grid.Column="1" Grid.Row="0" />

        <TextBlock Style="{StaticResource ConfigLabel}" Grid.Column="0" Grid.Row="1">Bottom Value:</TextBlock>
        <TextBox Name="textBoxBottomValue" Grid.Column="1" Grid.Row="1" />
    </Grid>
</common:PhidgetConfigControl>
