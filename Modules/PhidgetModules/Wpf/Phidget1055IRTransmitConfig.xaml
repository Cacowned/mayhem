<src:IWpfConfiguration x:Class="PhidgetModules.Reaction.Phidget1055IRTransmitConfig"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemDefaultStyles.UserControls;assembly=MayhemDefaultStyles"
             Width="400">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="WrapWithOverflow">Press the button on the remote control that we will retransmit.</TextBlock>
            <TextBlock TextWrapping="WrapWithOverflow" Margin="0 50 0 20" MinHeight="50" Text="{Binding Code, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" FontSize="14" TextAlignment="Center" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</src:IWpfConfiguration>
