<src:IWpfConfiguration x:Class="PhidgetModules.Wpf.Phidget1055IRReceiveConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Width="400">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center">Send the IR Code to watch for.</TextBlock>
            <TextBlock Name="NoReciever" TextAlignment="Center" Foreground="#EF0000">Can't find the IR Reciever</TextBlock>
            <TextBlock TextWrapping="WrapWithOverflow" Margin="0 50 0 0" MinHeight="50" Text="{Binding Code}" FontSize="14" TextAlignment="Center" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</src:IWpfConfiguration>
