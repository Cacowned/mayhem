<src:WpfConfiguration x:Class="PhidgetModules.Wpf.Phidget1055IrReceiverConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Width="400">
    <Grid>
        <StackPanel>
            <TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Send the IR Code to watch for.</TextBlock>
            <TextBlock Style="{StaticResource ConfigBigText}" Text="{Binding Code}" />
            <TextBlock Style="{StaticResource ConfigErrorMessage}" Name="NoReciever" Text="Plug in a Phidget IR Receiver." HorizontalAlignment="Center" Visibility="Visible"  />
        </StackPanel>
    </Grid>
</src:WpfConfiguration>
