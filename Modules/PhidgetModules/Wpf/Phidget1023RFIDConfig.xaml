<src:IWpfConfiguration x:Class="PhidgetModules.Wpf.Phidget1023RFIDConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Width="400">
    <Grid>

        <Grid>
            <StackPanel>
                <TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Please touch a tag to the RFID reader.</TextBlock>
                <TextBlock TextWrapping="WrapWithOverflow" Margin="0,25,0,0" MinHeight="35" FontSize="14" TextAlignment="Center" FontWeight="Bold" Text="{Binding TagId}" />
            </StackPanel>
        </Grid>
    </Grid>
</src:IWpfConfiguration>
