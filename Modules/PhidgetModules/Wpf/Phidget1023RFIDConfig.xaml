<src:WpfConfiguration x:Class="PhidgetModules.Wpf.Phidget1023RFIDConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Width="400">
    <StackPanel>
        <TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Please touch a tag to the RFID reader.</TextBlock>
        <TextBlock Style="{StaticResource ConfigBigText}" Text="{Binding TagId}" />
        <TextBlock Style="{StaticResource ConfigErrorMessage}" Name="NoReader" Text="Can't find the RFID reader" HorizontalAlignment="Center" Visibility="Visible" />
    </StackPanel>
</src:WpfConfiguration>
