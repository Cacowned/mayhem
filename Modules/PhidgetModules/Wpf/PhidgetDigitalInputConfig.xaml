<src:WpfConfiguration x:Class="PhidgetModules.Wpf.PhidgetDigitalInputConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource ConfigLabel}" Grid.Column="0" Grid.Row="0">Input:</TextBlock>
        <ComboBox Name="InputBox" Grid.Column="1" Grid.Row="0" />

        <TextBlock Style="{StaticResource ConfigLabel}" Grid.Column="0" Grid.Row="1">Trigger When:</TextBlock>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Orientation="Vertical">
            <RadioButton Name="GoesOnRadio" GroupName="TriggerOn" Content="Turns On" IsChecked="True" />
            <RadioButton Name="TurnsOffRadio" GroupName="TriggerOn" Content="Turns Off" />
        </StackPanel>
    </Grid>
</src:WpfConfiguration>