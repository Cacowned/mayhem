<UserControl x:Class="PhidgetModules.Wpf.UserControls.SensorData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" Width="400" Margin="0,0,0,20">
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="290" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">Raw Value:</TextBlock>
            <TextBox Name="ValueBox" IsEnabled="False" Grid.Column="1" Grid.Row="0" />

            <TextBlock HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">Sensor:</TextBlock>
			<ComboBox Name="SensorBox" Grid.Column="1" Grid.Row="1" SelectionChanged="SensorBox_SelectionChanged" ItemsSource="{Binding IfKit.sensors}" />

        </Grid>
    </Border>
</UserControl>
