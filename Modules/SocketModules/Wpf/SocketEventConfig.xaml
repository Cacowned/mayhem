<src:WpfConfiguration x:Class="SocketModules.Wpf.SocketEventConfig"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Width="400">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100" />
			<ColumnDefinition Width="300" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<TextBlock Style="{StaticResource ConfigLabel}" Grid.Column="0" Grid.Row="0">Listen for Phrase:</TextBlock>
		<TextBox Name="PhraseTextBox"  Grid.Column="1" Grid.Row="0" TextChanged="PhraseText_TextChanged" />

		<TextBlock Style="{StaticResource ConfigErrorMessage}" Name="textInvalid" Grid.Column="1" Grid.Row="1">Phrase is invalid</TextBlock>

		<DockPanel Grid.ColumnSpan="2" Grid.Row="2" Margin="0,20,0,0">
			<Button Name="Copy" DockPanel.Dock="Right" Click="Copy_Click">Copy to Clipboard</Button>
			<TextBox Name="command" TextAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Left"></TextBox>
		</DockPanel>
		
		
	</Grid>
</src:WpfConfiguration>