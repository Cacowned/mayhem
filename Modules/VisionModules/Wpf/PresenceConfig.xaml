<src:IWpfConfiguration x:Class="VisionModules.Wpf.PresenceConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             xmlns:visionmods="clr-namespace:VisionModules.Wpf"
             Width="400"
             IsVisibleChanged="Control_IsVisibleChanged">
    <Grid >
        <StackPanel>
            <visionmods:MultiCameraSelector x:Name="camera_selector"></visionmods:MultiCameraSelector>
            <Label>Event activation mode:</Label>
            <StackPanel Margin="5 0 0 0">
                <RadioButton Name="rb_triggerMode_toggle" GroupName="triggerMode" IsChecked="True" Checked="rb_triggerMode_toggle_Checked">Activate on any change in presence (Default).</RadioButton>
                <RadioButton Name="rb_triggerMode_offOn" GroupName="triggerMode" Checked="rb_triggerMode_toggle_Checked">Presence switches from not detected to detected. </RadioButton>
                <RadioButton Name="rb_triggerMode_onOff" GroupName="triggerMode" Checked="rb_triggerMode_toggle_Checked">Presence switches from detected to not detected.</RadioButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</src:IWpfConfiguration>
