<UserControl x:Class="WindowModules.Wpf.WindowResize"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid Margin="0,5,0,5">
        <TextBlock FontSize="14" VerticalAlignment="Center" Margin="0,0,0,0">Resize to:</TextBlock>
        <TextBlock FontSize="14" VerticalAlignment="Center" Margin="70,0,0,0">Width:</TextBlock>
        <TextBox Name="textBoxWidth" Margin="115,0,0,0" FontSize="14" Width="50" HorizontalAlignment="Left" />
        <TextBlock FontSize="14" VerticalAlignment="Center" Margin="170,0,0,0">Height:</TextBlock>
        <TextBox Name="textBoxHeight" Margin="215,0,0,0" FontSize="14" Width="50" HorizontalAlignment="Left" />
        <Button Name="buttonSet" Width="95" Margin="270,0,0,0" Click="buttonSet_Click">Use current size</Button>
    </Grid>
</UserControl>
