<UserControl x:Class="WindowModules.Wpf.WindowSendKeys"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DesignWidth="400"
             mc:Ignorable="d"
             LostFocus="UserControl_LostFocus"
             >
    <Grid Margin="0,5,0,5">
        <TextBlock FontSize="14" VerticalAlignment="Center" Margin="0,0,0,0">Send Keys:</TextBlock>
        <TextBox Name="textBlockKeys" Margin="80,0,50,0" GotFocus="textBlockKeys_GotFocus" LostFocus="textBlockKeys_LostFocus" KeyDown="textBlockKeys_KeyDown" />
        <Button Name="buttonClear" Content="Clear" HorizontalAlignment="Right" Margin="0,0,0,0" Click="buttonClear_Click" Focusable="False" Width="45" />
    </Grid>
</UserControl>
