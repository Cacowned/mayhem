<UserControl x:Class="WindowModules.Wpf.WindowMove"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid Margin="0,5,0,5">
        <TextBlock FontSize="14" VerticalAlignment="Center" Margin="0,0,0,0">Move to:</TextBlock>
        <TextBlock FontSize="14" VerticalAlignment="Center" Margin="80,0,0,0">X:</TextBlock>
        <TextBox Name="textBoxMoveX" Margin="100,0,0,0" FontSize="14" Width="50" HorizontalAlignment="Left" />
        <TextBlock FontSize="14" VerticalAlignment="Center" Margin="160,0,0,0">Y:</TextBlock>
        <TextBox Name="textBoxMoveY" Margin="180,0,0,0" FontSize="14" Width="50" HorizontalAlignment="Left" />
        <Button Name="buttonSet" Margin="250,0,0,0" Click="buttonSet_Click">Use current location</Button>
    </Grid>
</UserControl>
