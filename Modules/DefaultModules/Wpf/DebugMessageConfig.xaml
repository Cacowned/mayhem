<src:IWpfConfiguration x:Class="DefaultModules.Wpf.DebugMessageConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Width="400">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0">Message:</TextBlock>
                <TextBox Name="MessageText" Width="330" TextChanged="MessageText_TextChanged" />
            </StackPanel>
            <TextBlock Name="textInvalid" Text="Message is invalid" Margin="60,0,0,0" Foreground="#EF0000" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</src:IWpfConfiguration>