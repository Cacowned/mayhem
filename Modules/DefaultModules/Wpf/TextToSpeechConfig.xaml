<src:IWpfConfiguration x:Class="DefaultModules.Wpf.TextToSpeechConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             Width="400">

    <Grid>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="290" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Column="0" Grid.Row="0">Message:</TextBlock>
                <TextBox Name="MessageText" Grid.Column="1" Grid.Row="0" TextChanged="MessageText_TextChanged" />

            </Grid>
            <TextBlock Name="textInvalid" Text="Message is invalid" Margin="100,0,0,0" Foreground="#EF0000" Visibility="Visible" />
        </StackPanel>
    </Grid>
</src:IWpfConfiguration>
