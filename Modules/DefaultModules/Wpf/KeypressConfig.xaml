<src:IWpfConfiguration x:Class="DefaultModules.Wpf.KeypressConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
            Width="400" >
    <Grid>
        <StackPanel>
            <TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Please enter a combination of keys which will activate this event.</TextBlock>
            <TextBlock Style="{StaticResource ConfigBigText}" Text="{Binding KeysDownText}" />
            <TextBlock Style="{StaticResource ConfigErrorMessage}" Name="textInvalid" Text="At lease one button must be pushed." HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</src:IWpfConfiguration>
