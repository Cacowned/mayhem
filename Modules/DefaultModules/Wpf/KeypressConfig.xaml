<src:IWpfConfiguration x:Class="DefaultModules.Wpf.KeypressConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
            Width="400" >
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="WrapWithOverflow">Please enter a combination of keys which will activate this event.</TextBlock>
            <TextBlock Name="textBoxKeys" TextWrapping="WrapWithOverflow" Margin="0,25,0,0" MinHeight="35" FontSize="14" TextAlignment="Center" FontWeight="Bold" />
            <TextBlock Name="textInvalid" Text="Key combination is invalid" HorizontalAlignment="Center" Foreground="#EF0000" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</src:IWpfConfiguration>
