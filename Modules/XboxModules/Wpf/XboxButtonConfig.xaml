<src:IWpfConfiguration x:Class="XboxModules.Wpf.XboxButtonConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
        Width="400" >

	<Grid>
        <StackPanel>
            <TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Please enter a combination of buttons which will activate this event.</TextBlock>
            <TextBlock Style="{StaticResource ConfigBigText}" Text="{Binding ButtonsDown}" />
            <TextBlock Style="{StaticResource ConfigErrorMessage}" Name="textInvalid" Text="Key combination is invalid" HorizontalAlignment="Center" />
        </StackPanel>
	</Grid>
</src:IWpfConfiguration>