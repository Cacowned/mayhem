<src:IWpfConfiguration x:Class="XboxModules.Wpf.XboxButtonConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemDefaultStyles.UserControls;assembly=MayhemDefaultStyles"
        Width="400" >

	<Grid>
		<StackPanel>
			<TextBlock TextWrapping="WrapWithOverflow">Please enter a combination of buttons which will activate this event.</TextBlock>
			<TextBlock TextWrapping="WrapWithOverflow" Margin="0 50 0 20" MinHeight="50" Text="{Binding ButtonsDown}" FontSize="14" TextAlignment="Center" FontWeight="Bold" />
		</StackPanel>
	</Grid>
</src:IWpfConfiguration>