<src:WpfConfiguration x:Class="ArduinoModules.Wpf.ArduinoAnalogWriteConfig"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:MayhemWpf.UserControls;assembly=MayhemWpf"
             xmlns:ext="clr-namespace:ArduinoModules.Wpf.Helpers"
             Width="400" 
             MinHeight="500"
             Name="root">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label>Select COM port on which an Arduino is connected:</Label>
            <StackPanel Orientation="Horizontal">
                <ComboBox Name="deviceList" Width="200" SelectionChanged="deviceList_SelectionChanged"></ComboBox>
                <Button Name="connectButton" Margin="10 0 0 0" Click="connectButton_Click">Connect</Button>
            </StackPanel>
            <Label>Set analog pin output values when triggered:</Label>
            <DataGrid ext:DataGridColumns.Stretch="True" Width="350" Name="analogPins" AutoGeneratedColumns="analogPins_AutoGeneratedColumns" Visibility="Hidden"></DataGrid>
        </StackPanel>
    </Grid>
</src:WpfConfiguration>
