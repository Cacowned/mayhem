<src:IWpfConfiguration x:Class="PhoneModules.ReactionFromWP7Config"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:src="clr-namespace:MayhemDefaultStyles.UserControls;assembly=MayhemDefaultStyles"
             Width="320" Height="380">
    <Grid>
        <StackPanel Width="320" Height="380">
            <Image Name="imageQR" Width="320" Height="320" />
            <StackPanel Orientation="Horizontal">
                <TextBlock>IP Address:</TextBlock>
                <TextBlock Margin="16,0,0,0" Name="textIP" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Port:</TextBlock>
                <TextBlock Margin="50,0,0,0" Name="textPort" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Event ID:</TextBlock>
                <TextBlock Margin="29,0,0,0" Name="textEvent" />
            </StackPanel>
        </StackPanel>
    </Grid>
</src:IWpfConfiguration>
