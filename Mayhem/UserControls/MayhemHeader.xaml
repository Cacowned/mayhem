<UserControl x:Class="Mayhem.UserControls.MayhemHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Border BorderThickness="0,0,0,1" BorderBrush="White">
        <Border BorderThickness="0,0,0,1" BorderBrush="Black">
            <Grid Style="{StaticResource HeaderBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="60" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Source="../Images/LogoAppWhiteDropShadowSmaller.png" Width="300" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" />
            </Grid>
        </Border>
    </Border>
</UserControl>
