<UserControl x:Class="MayhemApp.MayhemBlueButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="57" d:DesignWidth="180" BorderBrush="#FF969696" BorderThickness="1">
    <Canvas Background="Blue">
        <Image x:Name="Img" Source="{Binding Img}" Margin="0" MaxHeight="57" MaxWidth="180"/>
        <TextBlock x:Name="name" Text="{Binding Text}" Background="Transparent" Margin="70 15 5 0"/>
   </Canvas>
</UserControl>
